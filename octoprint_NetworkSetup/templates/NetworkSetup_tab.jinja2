<div class="row-fluid">
        <form class="form-horizontal">
            <h1>{{ _('General Configuration') }}</h1>
            <div class="control-group">
                <label class="control-label">{{ _('Hostname') }}</label>
                <div class="controls">
                  <input type="text" style="width:200px" class="input-block-level" data-bind="value: settings.plugins.NetworksetupPlugin.hostname">
                </div>
            </div>

            <h1>{{ _('WiFi Setup') }}</h1>
            <div class="control-group">
                <label class="control-label">{{ _('SSID') }}</label>
                <div class="controls">
                    <select id="networksetup-ssid" data-bind="value: settings.plugins.NetworksetupPlugin.ssid, options: settings.plugins.NetworksetupPlugin.ssid_list, optionsText: 'name', optionsValue: 'key'">
                    </select>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">{{ _('Passkey') }}</label>
                <div class="controls">
                  <input type="text" style="width:200px" class="input-block-level" data-bind="value: settings.plugins.NetworksetupPlugin.passkey">
                </div>
            </div>
        </form>
</div>
